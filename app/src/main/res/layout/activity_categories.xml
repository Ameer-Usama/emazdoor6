                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:contentDescription="Cleaning"
                    android:src="@drawable/ic_cleaning"
                    app:tint="#000000" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Cleaning"
                android:textColor="@color/text_primary"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Plumbing Category -->
        <LinearLayout
            android:id="@+id/category_plumbing"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
            android:gravity="center"
            android:orientation="vertical"
            app:layout_columnWeight="1">

            <androidx.cardview.widget.CardView
                android:layout_width="70dp"
                android:layout_height="70dp"
                app:cardBackgroundColor="#DCEDC8"
                app:cardCornerRadius="35dp"
                app:cardElevation="0dp">

                <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:layout_gravity="center"
                    android:contentDescription="Plumbing"
                    android:src="@drawable/ic_plumbing"
                    app:tint="#000000" />
            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="Plumbing"
                android:textColor="@color/text_primary"
                android:textSize="12sp" />
        </LinearLayout>

        <!-- Electronics Category -->
        <LinearLayout
            android:id="@+id/category_electronics"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginBottom="24dp"
